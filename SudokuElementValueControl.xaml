<UserControl x:Class="Sudoku.SudokuElementValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sudoku"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Margin="0,0,263.4,241.8"
             >
    <!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->
    <UserControl.Resources>
        <local:SudokuElementValueToStringConverter x:Key="ElementValueToStringConverter"/>
    </UserControl.Resources>
    <TextBox HorizontalAlignment="Left" Height="23" Margin="0,0,0,0" TextWrapping="Wrap" Text="{Binding ElementValue,Mode=OneWay,Converter={StaticResource ElementValueToStringConverter}}" VerticalAlignment="Top" Width="120" IsReadOnly="True" 
             DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SudokuElementValueControl}}"/>
</UserControl>
